{
  "name":"Account Balance Masker",
  "version":"0.0.2",
  "description":"An extension to mask account balances",
  "manifest_version":3,
  "author":"Jeffrey Boisvert",
  "permissions":[
     "activeTab",
     "scripting",
     "storage"
  ],
  "icons": {
   "128": "icon128.png"
 },
  "content_scripts":[
     {
        "matches":[
           "https://www1.royalbank.com/*"
        ],
        "js":[
           "rbc-mask.js"
        ]
     },
     {
      "matches":[
         "https://www.tangerine.ca/app*"
      ],
      "js":[
         "tangerine-mask.js"
      ]
   }
  ]
}